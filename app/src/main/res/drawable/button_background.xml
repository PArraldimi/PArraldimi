<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#3f2e90" />
            <gradient android:angle="-90" android:startColor="#3f2e90" android:endColor="#3f2e90"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#4c3f90" />
            <solid android:color="#3f2e90"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#3f2e90" />
            <gradient android:angle="-90" android:startColor="#564a91" android:centerColor="#473892" android:endColor="#564a91" />
        </shape>
    </item>
</selector>