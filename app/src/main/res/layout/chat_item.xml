<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#803e46c7"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#803e46c7"
        android:elevation="0dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/single_user_circle_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/profile_image_placeholder" />

        <TextView
            android:id="@+id/single_user_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/single_user_circle_image"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:text="Username"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/single_user_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/single_user_tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:textColor="#80ffffff"
            android:layout_toEndOf="@+id/single_user_circle_image"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="5dp"
            android:text="Last Message Sent or received xzk"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/last_seen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:text="last seen"
            android:textSize="16sp" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#353131"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>