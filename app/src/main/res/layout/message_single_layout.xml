<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="13dp"
    android:layout_marginBottom="5dp"
    android:background="#FFF"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_image" />

    <TextView
        android:id="@+id/message_single_dispaly_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:padding="5dp"
        android:text="textView"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_single_display_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:text="00:00" />

    <TextView
        android:id="@+id/message_single_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_single_dispaly_name"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:padding="5dp"
        android:text="Message Text" />

    <ImageView
        android:id="@+id/message_single_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_single_text"
        android:layout_toEndOf="@+id/message_profile_image"
        android:scaleType="centerCrop" />

</RelativeLayout>