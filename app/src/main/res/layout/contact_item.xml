<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/contact_card"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="5dp"
    android:checkable="true"
    android:focusable="true"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contact_item_name"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_baseline_phone" />

        <TextView
            android:id="@+id/contact_item_phone"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/contact_item_name"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_baseline_person_24" />
        <TextView
            android:id="@+id/contact_share_app"
            android:layout_width="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:layout_above="@+id/contact_item_invite"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/contact_item_name" />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/contact_item_invite"
            android:text="Invite"
            android:layout_margin="10dp"
            android:paddingBottom="8dp"
            android:layout_alignBaseline="@+id/contact_item_phone"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>