<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_gradient">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linear01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/century"
                android:text="@string/my_schedule"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/text_view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/century"
                android:text="@string/date"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </RelativeLayout>
        <!--        profile image layout here-->
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear01">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="@font/century"
            android:text="@string/today_s_todo_list"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="170dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/task_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="-4dp" />



            </androidx.appcompat.widget.LinearLayoutCompat>
        </HorizontalScrollView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative02">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/century"
            android:text="My Companions"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--            companions icons here-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative03">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Upcoming TODO List"
            android:fontFamily="@font/century"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--            Slide view here-->
    </RelativeLayout>



</RelativeLayout>


