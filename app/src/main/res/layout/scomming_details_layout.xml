<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scomming_details"
    android:layout_width="380dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#E0E4F1"
    android:orientation="vertical">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/task_details_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_chevron_left_black_24dp"
        android:layout_marginBottom="10dp"
        android:background="#80BBF8"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arialregular"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/back_button"
            android:textSize="20sp"
            android:text="Scomming Details"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <RelativeLayout
        android:id="@+id/relative_scommers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/arialregular"
            android:text="Scommer(s)"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:maxHeight="140dp"
            android:minHeight="140dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/task_recycler"
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                />


        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/arialregular"
            android:text="To Scommin"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:maxHeight="70dp"
            android:elevation="70dp"
            android:minHeight="70dp"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/companions_recycler"
                android:layout_width="wrap_content"
                android:layout_margin="3dp"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
