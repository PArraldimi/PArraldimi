<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:padding="5dp"
    android:background="#fff"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="260dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/notificationborder">

        <TextView
            android:id="@+id/notification_text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />
        <Button
            android:id="@+id/notification_view_scommers"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/notificationborder"
            android:layout_marginBottom="5dp"
            android:elevation="57dp"
            android:onClick="invite"
            android:text="@string/view_scommers"
            android:gravity="center_vertical"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>
        <TextView
            android:id="@+id/notification_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date sent"
            android:textSize="11dp"
            android:textColor="#000"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_weight="4"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/notification_accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_centerHorizontal="true"
            android:text="@string/scommin"
            android:background="@drawable/scrollviewborder"
            android:layout_marginBottom="5dp"
            android:elevation="20dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/notification_decline_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:textSize="12sp"
            android:layout_below="@+id/notification_accept_btn"
            android:layout_centerHorizontal="true"
            android:text="@string/decline"
            android:background="@drawable/scrollviewborder"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/notification_chat_btn"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:textSize="12sp"
            android:layout_below="@id/notification_decline_btn"
            android:layout_centerHorizontal="true"
            android:background="@drawable/scrollviewborder"
            android:gravity="center"
            android:text="@string/chat"
            android:textAllCaps="false" />
    </RelativeLayout>

</LinearLayout>
